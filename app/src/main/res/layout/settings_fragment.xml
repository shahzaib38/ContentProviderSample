<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="SettingsDataBinding">

        <variable
            name="viewModel"
            type="image.crystalapps.contentprovidersample.ui.mainactivity.fragments.settings.SettingsViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        android:background="@color/colorBackgroundDarkTranslucent"
        >


        <include
            layout="@layout/material_toolbar"
            app:title="@string/settings"
            app:titleTextColor="@color/toolbarTextColor"
            android:id="@+id/main_toolbar"
            />

            <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/settingRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>
</layout>